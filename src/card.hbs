{{#each hits}}
<li class='gallery__item'>
    <div class='photo-card'>
        <img class='card__img' src={{this.webformatURL}} alt={{this.tags}} data-src={{this.largeImageURL}} />
        <div class='stats'>
            <p class='stats-item'>
                <i class='material-icons md-dark'>thumb_up</i>
                {{this.likes}}
            </p>
            <p class='stats-item'>
                <i class='material-icons md-dark'>visibility</i>
                {{this.views}}
            </p>
            <p class='stats-item'>
                <i class='material-icons md-dark'>comment</i>
                {{this.comments}}
            </p>
            <p class='stats-item'>
                <i class='material-icons md-dark'>cloud_download</i>
                {{this.downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}